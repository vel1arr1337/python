number = int(input("Введите целое число:"))
if number < 0:
    number = -number
elif number == 0:
    number = 1
print(number)

string = input("Введите произвольную строку: ")
contains_punctuation = '.' in string or ',' in string
print(contains_punctuation)

a = int(input("Введите первое целое число:"))
b = int(input("Введите второе целое число:"))
if a % 3 == 0 and b % 3 == 0:
    print(True)
elif a % 3 == 0 or b % 3 == 0:
    print("Одно число делится на 3")
else:
    print(False)
